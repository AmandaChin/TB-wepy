<script>
import wepy from 'wepy'
import { service } from '../config.js'
import base from '../mixins/base'
import user from '../mixins/user'

export default class pageUser extends wepy.page {
  mixins = [base, user];
  config = {
    navigationBarTitleText: '我的',
    enablePullDownRefresh: false
  };
  data = {
      nickName: '',
      // 头像占位图
      avatarUrl: '../images/icon/icon-avatar@2x.png',
      accountNum:0
  };

  computed = {
    isLogin() {
        if(this.$parent.globalData.id !== -1){
          return true;
        }else{
          return false;
        }
        //return true;
    },
    nickName() {
      const info = this.$parent.globalData.userinfo
      if(info){
        // 名称或头像不为空的，才认为是授权用户
        return info.name
      }
      else{
        return '未授权用户'
      }
    },
    avatarUrl() {
      const info = this.$parent.globalData.user
      if(info){
        
        return info.avatarUrl
      }
      else{
        return '../images/icon/icon-avatar@2x.png'
      }
    },
    myAccount() {
     const num = this.accountNum
      if(num){
        return parseFloat(num).toFixed(2)
      }
      else{
        return 0
      }
    }
  };

  onShow() {
     this.initUserData()
  }

  onPullDownRefresh() {
    this.initUserData()
  }
  
  // 初始化页面数据
  initUserData() {
    this.getWeInfo()
    this.getUserAccount()
    this.$apply()
  }
  async getUserAccount(){
    console.log('get account!')
    let res = await wepy.request({
      url: service.host + '/wallet/'+this.$parent.globalData.id, //开发者服务器接口地址",
      method: 'GET'
    });
    this.accountNum = res.data.coins
    this.$apply()
  }

  methods = {
    login(){
      wx.navigateTo({
          url: `/pages/login/login`
        })
    },
    register(){
      wx.navigateTo({
          url: `/pages/login/register`
        })
    }
  }

  components = {}
}
</script>

